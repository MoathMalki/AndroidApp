<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#38948C"
    android:orientation="vertical"
    android:padding="16dp">

    <TextView
        android:id="@+id/calorieResultText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Calculating recommended calories based on your BMI..."
        android:textColor="#333333"
        android:textSize="18sp"
        android:layout_marginBottom="20dp" />

    <CheckBox
        android:id="@+id/exerciseTypeCheckbox"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Show Exercises"
        android:textColor="#333333"
        android:layout_marginBottom="20dp" />



    <TextView
        android:id="@+id/exerciseListText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text=""
        android:textColor="#333333"
        android:textSize="16sp"
        android:layout_marginTop="20dp" />
</LinearLayout>
